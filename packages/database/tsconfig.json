{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "paths": {}
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
