{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ES2021"],
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "strict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "noImplicitOverride": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": false,
    "sourceMap": true,
    "types": ["node", "jest"],
    "paths": {
      "@solana-eda/types": ["../../packages/types/src"],
      "@solana-eda/events": ["../../packages/events/src"],
      "@solana-eda/config": ["../../packages/config/src"],
      "@solana-eda/database": ["../../packages/database/src"],
      "@solana-eda/monitoring": ["../../packages/monitoring/src"],
      "@solana-eda/error-handling": ["../../packages/error-handling/src"],
      "@solana-eda/solana-client": ["../../packages/solana-client/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
