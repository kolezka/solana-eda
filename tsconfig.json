{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Path aliases for workspace packages
    "paths": {
      "@solana-eda/types": ["./packages/types/src"],
      "@solana-eda/events": ["./packages/events/src"],
      "@solana-eda/config": ["./packages/config/src"],
      "@solana-eda/database": ["./packages/database/src"],
      "@solana-eda/solana-client": ["./packages/solana-client/src"],
      "@solana-eda/monitoring": ["./packages/monitoring/src"],
      "@solana-eda/error-handling": ["./packages/error-handling/src"]
    }
  }
}
